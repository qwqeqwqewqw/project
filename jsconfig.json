{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*.js", "src/**/*.svelte"],
  "references": [{ "path": "./jsconfig.node.json" }]
}